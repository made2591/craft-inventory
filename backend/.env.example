# ============================================================================
# Backend Environment Configuration - Standard Mode
# ============================================================================
# Copy this file to .env and customize the values for your local development
# This file contains example values with no sensitive information
# ============================================================================

# Database Configuration
# Replace with your actual database connection details
DATABASE_URL=postgres://craftuser:craftpassword@172.28.1.2:5432/craftdb

# Server Configuration
PORT=8080
NODE_ENV=development

# Application Mode
# Set to "false" for normal operation, "true" for kiosk mode with auto-reset
KIOSK_MODE=false

# Kiosk Configuration (only used when KIOSK_MODE=true)
# Reset interval in minutes - how often the database should be reset in kiosk mode
KIOSK_RESET_INTERVAL_MINUTES=15

# Security Settings
# In production, use strong secrets and enable HTTPS
CORS_ORIGIN=http://localhost:3000
ENABLE_CORS=true

# Database Pool Settings
# Adjust based on your database server capacity
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000

# Logging Level
# Options: error, warn, info, debug
LOG_LEVEL=info

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ============================================================================
# Instructions:
# 1. Copy this file to .env in the backend directory
# 2. Update DATABASE_URL with your actual database credentials
# 3. Modify other settings as needed for your environment
# 4. Never commit the actual .env file to version control
# ============================================================================
