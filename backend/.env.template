# Backend Environment Configuration
# Copy this file to .env and configure your settings

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/database_name
# Example: postgres://craftuser:your_secure_password@localhost:5432/craftdb

# Server Configuration
PORT=8080

# Kiosk Mode Configuration
# KIOSK_MODE=true

# Kiosk Reset Interval (in minutes) - only used when KIOSK_MODE=true
# Default: 15 minutes, Valid range: 1-1440 minutes (1 minute to 24 hours)
# KIOSK_RESET_INTERVAL_MINUTES=15

# Development/Production Environment
NODE_ENV=development

# Security (add these for production)
# JWT_SECRET=your-super-secret-jwt-key-here
# SESSION_SECRET=your-session-secret-here

# Optional: Logging Level
# LOG_LEVEL=debug
