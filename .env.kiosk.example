# ============================================================================
# Docker Compose Environment Configuration - Kiosk Mode
# ============================================================================
# This file contains environment variables for docker-compose-kiosk.yml
# Copy this file to .env.kiosk in the root directory and customize as needed
# ============================================================================

# PostgreSQL Database Configuration
POSTGRES_USER=craftuser
POSTGRES_PASSWORD=craftpassword
POSTGRES_DB=craftdb
POSTGRES_PORT=5433

# Backend Configuration
BACKEND_PORT=8081
NODE_ENV=development
DATABASE_URL=postgres://craftuser:craftpassword@172.30.1.2:5432/craftdb
KIOSK_MODE=true
KIOSK_RESET_INTERVAL_MINUTES=15

# Frontend Configuration
FRONTEND_PORT=3001

# Cloudflare Tunnel Configuration (for kiosk with tunnel access)
CLOUDFLARE_TUNNEL_NAME=your-kiosk-tunnel-name
CLOUDFLARE_CONFIG_PATH=./cloudflared
CLOUDFLARED_IP=172.30.1.5

# Network Configuration
POSTGRES_IP=172.30.1.2
BACKEND_IP=172.30.1.3
FRONTEND_IP=172.30.1.4
NETWORK_SUBNET=172.30.0.0/16

# Container Names
POSTGRES_CONTAINER=craft-postgres-kiosk
BACKEND_CONTAINER=craft-backend-kiosk
FRONTEND_CONTAINER=craft-frontend-kiosk

# Volume Names
POSTGRES_VOLUME=postgres_kiosk_data
