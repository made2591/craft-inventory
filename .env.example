# ============================================================================
# Docker Compose Environment Configuration - macOS Mode
# ============================================================================
# This file contains environment variables for docker-compose-mac.yml
# Copy this file to .env.mac in the root directory and customize as needed
# ============================================================================

# PostgreSQL Database Configuration
POSTGRES_USER=craftuser
POSTGRES_PASSWORD=craftpassword
POSTGRES_DB=craftdb
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=8080
NODE_ENV=development
DATABASE_URL=postgres://craftuser:craftpassword@172.28.1.2:5432/craftdb
KIOSK_MODE=false
KIOSK_RESET_INTERVAL_MINUTES=15

# Frontend Configuration
FRONTEND_PORT=3000

# Network Configuration
POSTGRES_IP=172.28.1.2
BACKEND_IP=172.28.1.3
FRONTEND_IP=172.28.1.4
NETWORK_SUBNET=172.28.0.0/16

# Container Names
POSTGRES_CONTAINER=craft-postgres
BACKEND_CONTAINER=craft-backend
FRONTEND_CONTAINER=craft-frontend

# Volume Names
POSTGRES_VOLUME=postgres_data
